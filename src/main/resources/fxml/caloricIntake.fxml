<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.fitapp.controller.CaloricIntakeController">

    <!-- Background image -->
    <ImageView fitWidth="800"
               fitHeight="600"
               preserveRatio="false"
               opacity="0.9">
        <image>
            <Image url="@/images/calories.jpg" />
        </image>
    </ImageView>

    <!-- Caloric intake card -->
    <VBox spacing="15"
          alignment="CENTER"
          maxWidth="320"
          style="-fx-background-color: rgba(255,255,255,0.85);
                 -fx-background-radius: 12;
                 -fx-padding: 25;">

        <Label text="Caloric Intake"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="caloriesField"
                   promptText="Calories Consumed"
                   maxWidth="Infinity" />

        <Button text="Add Calories"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"
                onAction="#handleAddingCalories" />

        <TextField fx:id="remainingField"
                   promptText="Remaining Intake"
                   editable="false"
                   maxWidth="Infinity" />

        <Label fx:id="caloriesOverflowLabel"
               text="Exceeded Daily Limit of Calories!"
               textFill="RED"
               visible="false" />

        <Button text="Reset Calories"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"
                onAction="#handleReset" />

        <Button text="Back to Menu"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"
                onAction="#handleBackToMenu" />

    </VBox>

</StackPane>