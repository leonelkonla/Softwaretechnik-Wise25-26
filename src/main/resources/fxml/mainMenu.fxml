<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.fitapp.controller.MainMenuController">

    <!-- Background image -->
    <ImageView fitWidth="800"
               fitHeight="600"
               preserveRatio="false"
               opacity="0.9">
        <image>
            <Image url="@/images/menu.jpg" />
        </image>
    </ImageView>

    <!-- Menu card -->
    <VBox spacing="15"
          alignment="CENTER"
          maxWidth="320"
          style="-fx-background-color: rgba(255,255,255,0.85);
                 -fx-background-radius: 12;
                 -fx-padding: 25;">

        <Label text="Main Menu"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <Button text="Check Caloric Intake"
                fx:id="caloriesButton"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"
                onAction="#handleCheckCalories" />

        <Button text="Add Exercise"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"/>
<!--                onAction="#handleAddExercise" />-->

        <Button text="Make Plan"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"/>
<!--                onAction="#handleMakePlan" />-->

        <Button text="View Statistics"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"/>
<!--                onAction="#handleViewStatistics" />-->

        <Button text="Step Counter"
                maxWidth="Infinity"
                style="-fx-font-size: 14px;"/>
<!--                onAction="#handleStepCounter" />-->

    </VBox>

</StackPane>